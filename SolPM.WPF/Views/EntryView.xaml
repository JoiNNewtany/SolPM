        </ScrollViewer>

        <!-- Add Field Button -->

        <DockPanel
            Grid.Row="1"
            VerticalAlignment="Bottom">
            <materialDesign:PopupBox
                Style="{StaticResource MaterialDesignMultiFloatingActionDarkPopupBox}"
                Margin="0 0 25 15"
                PlacementMode="LeftAndAlignMiddles"
                UnfurlOrientation="Horizontal"
                ToolTip="Add Field"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <materialDesign:PopupBox.ToggleContent>
                    <materialDesign:PackIcon
                        Foreground="{StaticResource PrimaryHueDarkForegroundBrush}"
                        Kind="Add"
                        Height="24"
                        Width="24" />
                </materialDesign:PopupBox.ToggleContent>
                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        ToolTip="Username">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Kind="AccountBox" />
                        </Button.Content>
                    </Button>
                    <Button
                        ToolTip="Password">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Kind="KeyVariant" />
                        </Button.Content>
                    </Button>
                    <Button
                        ToolTip="Note">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Kind="DriveDocument" />
                        </Button.Content>
                    </Button>
                    <Button
                        ToolTip="File">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Kind="Files" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </materialDesign:PopupBox>
        </DockPanel>
